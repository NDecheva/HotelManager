@using HotelManagerMVC.Controllers
@using HotelManager.Shared.Extentions
@model HotelManagerMVC.ViewModels.ClientReservationEditVM

@{
    ViewBag.Title = "Client Reservation";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="***">
</head>

<body>
    <div class="container">
        <h2 class="text-center">Client Reservation</h2>

        @using (Html.BeginForm())
            @Html.AntiForgeryToken()

            <div class="card">
                <div class="card-body">
                    @Html.ValidationSummary(true)

                    <div class="form-group row">
                        @Html.LabelFor(model => model.ClientId, new { @class = "col-md-2 col-form-label text-md-right" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.ClientId, Model.Clients, "Choose a Client...",
                                     new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ClientId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        @Html.LabelFor(model => model.ReservationId, new { @class = "col-md-2 col-form-label text-md-right" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.ReservationId, Model.Reservations, "Choose a Reservation...",
                                     new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ReservationId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="offset-md-2 col-md-10">
                            <button type="submit" class="btn btn-primary">Client Reservation</button>
                            <a href="@Url.Action("List")" class="btn btn-secondary">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>