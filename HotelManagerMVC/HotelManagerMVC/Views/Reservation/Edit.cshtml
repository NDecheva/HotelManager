@model HotelManagerMVC.ViewModels.ReservationEditVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
            <h4>Reservation</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)



        <div class="form-group">
            @Html.LabelFor(model => model.RoomId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.RoomId, Model.Rooms, "Rooms...",
                         new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RoomId)
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ClientsIds, new { @class = "col-md-2 col-form-label text-md-right" })
            <div class="col-md-10">
                @Html.DropDownListFor(
                         m => m.ClientsIds,
                         new MultiSelectList(Model.Clients, "Value", "Text", Model.ClientsIds),
                         new { @class = "form-control multiselect", multiple = "multiple" }
                         )
                <small class="form-text text-muted">Hold down <strong>Ctrl</strong> (Windows) or <strong>Cmd</strong> (Mac) to select multiple clients.</small>

                @Html.ValidationMessageFor(model => model.ClientsIds, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group">
            @Html.LabelFor(model => model.CheckInDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CheckInDate)
                @Html.ValidationMessageFor(model => model.CheckInDate)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CheckOutDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CheckOutDate)
                @Html.ValidationMessageFor(model => model.CheckOutDate)
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.HasBreakfast, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.HasBreakfast)
                @Html.ValidationMessageFor(model => model.HasBreakfast)
            </div>
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.IsAllInclusive, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.IsAllInclusive)
                @Html.ValidationMessageFor(model => model.IsAllInclusive)
            </div>
        </div>


        <br />
        <td class="action-links">

            <button type="submit" class="btn btn-small btn-success">Save</button>
            @Html.Raw("|")

            @Html.ActionLink("Back to List", "List", new { id = Model.Id }, new { @class = "btn btn-sm btn-primary" })
        </td>
    </div>
}
