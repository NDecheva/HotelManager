@model IEnumerable<HotelManagerMVC.ViewModels.RoomDetailsVM>

<link rel="stylesheet" href="~/css/style.css">


@{
    ViewBag.Title = "Index";
}

<h2>Rooms</h2>

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RoomNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoomType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAvailable)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.PricePerNightAdult)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PricePerNightChild)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BreakfastPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AllInclusivePrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reservations)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsAvailable)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.PricePerNightAdult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerNightChild)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.BreakfastPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AllInclusivePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reservations)
            </td>
            <td class="action-links">
                @if (User.IsInRole("Admin"))
                {
                    

                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-secondary" })
                    @Html.Raw("|")

                }
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-info" })

                @if (User.IsInRole("Admin"))
                {
                    @Html.Raw("|")
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    
                }
            </td>
        </tr>
         

    }
</table>

<td class="action-links">
    @if (User.IsInRole("Admin"))
    {
        <div class="text-left mb-3">
            <a href="@Url.Action("Create")" class="btn btn-primary">Create New</a>
        </div>
    }
</td>